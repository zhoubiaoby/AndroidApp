<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal">
 <com.facebook.drawee.view.SimpleDraweeView
     android:id="@+id/course_imv"
     android:layout_width="130dp"
     android:layout_height="100dp"
     android:background="@drawable/course_default"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="课程名:"/>
        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/course"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="我的创新课程"
            android:textSize="12sp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/course_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/course"
            android:textStyle="bold"
            android:text="简介:"/>
        <TextView
            android:id="@+id/course_intro_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/course_intro"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            android:text="这是介绍创新方法的课程"/>
    </RelativeLayout>

</LinearLayout>
